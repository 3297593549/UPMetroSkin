"resource/layout/friendpanel_compact.layout"
{
	// custom layout
	
	controls
	{
		MenuButton { style=menuButtonStyle }
		AvatarOverlayImage { zpos=2 }
		AcceptLink { style="inviteLinkStyle" }
		IgnoreLink { style="inviteLinkStyle" }
		BlockLink { style="inviteLinkStyle" }
	}
	styles
	{
		CFriendPanel
		{
			inset="0 0 0 0"
			font-family=basefont
			font-size=20
			font-weight=400
			textcolor="White45"
			padding-bottom=4
		}
		SelfPanel:hover
		{
			render {}
		}
		namestyle
		{
			font-family=semibold
			font-size=20
			padding-bottom=4
		}
		nameInstanceStyle
		{
			font-family=semibold
			textcolor=White
			font-size=20
			padding-bottom=4
		}
		menuButtonStyle
		{
			minimum-width=14
			padding-top=3
			padding-bottom=4
		}
		statusStyle
		{
			font-family=basefont
			font-size=20
			padding-bottom=4
		}
		inviteLinkStyle
		{
			font-size=20
			textcolor=White
			font-style=regular
		}
		inviteLinkStyle:hover
		{
			textcolor=White
		}
	}

	layout
	{
		place { control="ClanStatusImage,NameLabel,FriendsNameInstanceLabel,MenuButton" x=3 y=1 spacing=2 }
		place { start=MenuButton control="CompactSeparatorLabel,StatusLabel,GameLabel,AcceptLink,IgnoreLink,BlockLink,SuggestedImage,SuggestedLabel,SuggestedInvite,SuggestedIgnore" x=4 spacing=4 margin-right=8 }
	}
}